#!/bin/bash

FOREVER=/usr/local/bin/forever
SERVER_JS_FILE=/home/pi/nodejs/heating/app/app.js 
USER=pi

case "$1" in

start)
  echo "starting forever: $FOREVER start $SERVER_JS_FILE"
  sudo -u $USER $FOREVER start $SERVER_JS_FILE
  ;;

stop)
  killall $FOREVER
  ;;

*)
  echo "usage: $0 (start|stop)"
esac

exit 0